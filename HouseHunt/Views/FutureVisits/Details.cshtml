@model DetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h2>@Model.House.Address</h2>

<div>
        <a class="btn btn-primary text-white" asp-action="AddPicture" asp-route-houseId="@Model.House.Id">Add Picture</a>
        <a class="btn btn-secondary text-white" asp-action="Edit" asp-route-houseId="@Model.House.Id">Edit</a>
        <a class="btn btn-danger text-white" asp-action="Delete" asp-route-houseId="@Model.House.Id">Delete</a>
</div>
<br/>

<div class="card p-2">
    
    <div id="carouselExampleControls" class="carousel slide" data-interval="false">
        <div class="carousel-inner">
            @{var first = true;}
            @foreach (var picture in Model.Pictures)
            {
                <div class="carousel-item @(first?Html.Raw("active"):Html.Raw(""))">
                    <img class="img-fluid d-block w-100" src="@picture.URL" alt="slide">
                </div>
                first = false;
            }
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <div class="figure-caption">
        <h3 class="float-right">@Model.House.Price.ToString("c0")</h3>
        <h3>
            <a href="#">@Model.House.Address</a>
        </h3>
        <h4>@Model.House.ShortDescription</h4>
        <br />
        <h4>@Model.House.WhenSeen.ToString("dddd dd MMMM yyy")</h4>
        <h4>@Model.House.WhenSeen.ToShortTimeString()</h4>
        <br />
        <img alt="@Model.House.Address" src="@Model.House.FloorPlan" class="img-fluid" />
        <br />
        <strong><a href="@Model.House.RightMoveUrl">Click here for RightMove Details</a></strong>
    </div>
</div>